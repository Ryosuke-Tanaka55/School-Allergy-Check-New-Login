<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1>献立表編集</h1>
    </div>
    <div class="modal-body">
      <div id="menus-error"></div>
      <%= form_with model: [@school, @menu], url: teachers_menu_path, remote: true, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :menu_name %><br>
          <%= f.text_field :menu_name, placeholder: "献立表名を入力してください", class: "form-control", required: true %><br>
        </div>

        <div class="form-group">
          <%= f.label :menu_pdf %>
            <%= @menu.menu_pdf.file.filename if @menu.menu_pdf? %>
          <%= f.file_field :menu_pdf %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>