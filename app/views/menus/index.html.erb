<% provide(:title, current_teacher.teacher_name) %>

<h1>献立表一覧</h1>

<!--献立追加ボタン-->
<% if current_teacher.admin? %>
  <div class="btn-menu-new">
    <%= link_to "献立表追加", new_teachers_menu_path, remote: true, class: "btn btn-info" %>
  </div>
<% end %>

<table class="table table-bordered table-condensed" id="index-classroom">
  <thead>
    <tr>
      <th>献立表名</th>
      <% if current_teacher.admin? %>
        <th>編集</th>
        <th>削除</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= link_to menu.menu_name, teachers_menu_path(menu) %></td>
        <% if current_teacher. admin? %>
          <td><%= link_to "編集", edit_teachers_menu_path(menu), remote: true, class: "btn btn-primary" %></td>
          <td><%= link_to "削除", teachers_menu_path(menu), method: :delete, class: "btn btn-danger", data: {confirm: "#{menu.menu_name}を削除してよろしいですか？" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>




<div id="new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>